ecmaFeatures:
    modules: true
    blockBindings: true
    forOf: true
    jsx: true
    arrowFunctions: true
    blockBindings: true
    defaultParams: true

env:
    node: true
    es6 : true

globals:
    expect : true
    describe : true
    it : true

rules:
    brace-style: [2, "1tbs"]
    comma-style: [2, "last"]
    default-case: 2
    func-style: [2, "declaration"]
    guard-for-in: 2
    no-floating-decimal: 2
    no-nested-ternary: 2
    no-undefined: 2
    radix: 2
    space-after-keywords: [2, "always"]
    spaced-line-comment: [2, "always", { exceptions: ["-"]}]
    valid-jsdoc: [2, { prefer: { "return": "returns"}}]
    wrap-iife: 2
    quotes : [1, "single"]
